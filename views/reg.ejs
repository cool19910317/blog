<%- include header%>
<form method="post">
  <div class="form-group">
    <label for="name">用户名： </label>
    <input class="form-control" type="text" name="name" id="name"> <br />
  </div>
  <div class="form-group">
    <label for="password">密码： </label>
    <input class="form-control" type="password" name="password" id="password"> <br />
  </div>
  <div class="form-group">
    <label for="password-repeat">确认密码： </label>
    <input class="form-control" type="password" name="password-repeat" id="password-repeat"> <br />
  </div>
  <div class="form-group">
    <label for="email">邮箱： </label>
    <input class="form-control" type="email" name="email" id="email"> <br />
  </div>
  <div class="form-group">
    <input class="form-control btn btn-primary" type="submit" value="注册"> <br />
  </div>
</form>
<%- include footer%>